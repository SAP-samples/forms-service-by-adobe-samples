{
    "compilerOptions": {
        "module": "es2022",
        "skipLibCheck": true,
        "allowJs": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "rootDir": "./webapp",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "com/sap/fp/demo/cinema/*": [
                "./webapp/*"
            ]
        },
        "lib": ["ES2015", "DOM", "ES5", "ES2017"],
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@sapui5/types"
        ]
    },
    "include": [
        "./webapp/**/*"
    ]
}